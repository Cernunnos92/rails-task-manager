<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <p>
    <%= check_box("task", task.id, {checked: task.completed}) %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "Delete", task_path(task), method: :delete,
      data: { confirm: "Are you sure?" } %>
  </p>
<% end %>

<%= link_to "Add a task", new_path %>
